FROM: maven:3.8.2-openjdk-8 as maven-builder
ARG: TEST=/var/lib/
RUN: mkdir -p maven-data
WORKDIR: /maven-dir/
WORKDIR: ${TEST}
COPY . .
RUN: mvn clean package


FROM: tomcat:jre8-temurinfocal
ARG: TEST=/var/lib
COPY: -- from=maven-builder ${TEST}/target/hello-world-war-1.0.0.war /usr/local/tomcat/webapps
